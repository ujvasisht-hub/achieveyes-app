// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  goals         Goal[]
  badges        Badge[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Goal {
  id              String        @id @default(cuid())
  userId          String
  initialGoal     String        // The first goal written
  realGoal        String        // After 5 whys
  deadline        DateTime
  why1            String?
  why2            String?
  why3            String?
  why4            String?
  why5            String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  completedAt     DateTime?
  isCompleted     Boolean       @default(false)
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  processGoals    ProcessGoal[]
  habitGoals      HabitGoal[]
  checkIns        CheckIn[]
  milestones      Milestone[]
}

model ProcessGoal {
  id              String    @id @default(cuid())
  goalId          String
  title           String
  description     String?
  periodType      String    // "24h", "48h", "7d", "1m", "3m", "6m", "1y", "custom"
  periodStart     DateTime
  periodEnd       DateTime
  isCompleted     Boolean   @default(false)
  completedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  goal            Goal      @relation(fields: [goalId], references: [id], onDelete: Cascade)
  checkIns        CheckIn[]
  recalibrations  Recalibration[]
}

model HabitGoal {
  id              String    @id @default(cuid())
  goalId          String
  title           String
  description     String?
  type            String    // "develop" or "let_go"
  currentStreak   Int       @default(0)
  longestStreak   Int       @default(0)
  targetDays      Int       @default(21)
  startDate       DateTime  @default(now())
  lastCheckInDate DateTime?
  isCompleted     Boolean   @default(false)
  completedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  goal            Goal      @relation(fields: [goalId], references: [id], onDelete: Cascade)
  checkIns        CheckIn[]
}

model CheckIn {
  id              String       @id @default(cuid())
  userId          String
  goalId          String
  processGoalId   String?
  habitGoalId     String?
  date            DateTime     @default(now())
  isAccomplished  Boolean
  notes           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  goal            Goal         @relation(fields: [goalId], references: [id], onDelete: Cascade)
  processGoal     ProcessGoal? @relation(fields: [processGoalId], references: [id], onDelete: Cascade)
  habitGoal       HabitGoal?   @relation(fields: [habitGoalId], references: [id], onDelete: Cascade)

  @@unique([userId, goalId, processGoalId, habitGoalId, date])
}

model Recalibration {
  id            String      @id @default(cuid())
  processGoalId String
  reason        String      // Why recalibration was needed
  originalEndDate DateTime
  newEndDate    DateTime
  extraWorkDays Int         // How many extra days of work added
  isAccepted    Boolean     @default(false)
  isManual      Boolean     @default(false) // If user manually adjusted
  createdAt     DateTime    @default(now())
  processGoal   ProcessGoal @relation(fields: [processGoalId], references: [id], onDelete: Cascade)
}

model Milestone {
  id            String   @id @default(cuid())
  goalId       String
  title        String
  description  String?
  type         String   // "process" or "habit"
  targetValue  Int      // Target number of completions or streak days
  currentValue Int      @default(0)
  isCompleted  Boolean  @default(false)
  completedAt  DateTime?
  createdAt    DateTime @default(now())
  goal         Goal     @relation(fields: [goalId], references: [id], onDelete: Cascade)
}

model Badge {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "process_complete", "habit_streak", "milestone", "goal_complete"
  title       String
  description String?
  icon        String?
  earnedAt    DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
